<?xml version="1.0" encoding="utf-8" ?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    tools:context="com.jubumam.surefin.VisitingBathActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#26ab74"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="31dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="방문목욕"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lin_bathAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lin_recipi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_rating1"
                        android:layout_width="48dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/icon_heart"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="등급"
                        android:textColor="#ffffff"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="이름"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tv_mdiv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="전화번호"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:id="@+id/lin_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_information"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ooo님 정보" />

                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/icon_arrow" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_sumTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="3회 사용"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tv_remainingTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="00회 남음"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:id="@+id/lin_service"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="4dp"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="서비스 사용 내역" />

                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/icon_arrow" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/scrolledge"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/green_bar"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/icon_cal" />

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="날짜"
                            android:textColor="#ffffff"
                            android:textSize="16dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/icon_clock" />

                        <TextView
                            android:id="@+id/tv_startTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="00:00"
                            android:textColor="#ffffff"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="~"
                            android:textColor="#ffffff"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tv_endTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="16dp"
                            android:text="00:00"
                            android:textColor="#ffffff"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="332dp"
                            android:layout_height="112dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_exp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="120dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/edge"
                                android:gravity="center"
                                android:paddingRight="8dp"
                                android:textSize="16dp" />

                            <Button
                                android:id="@+id/btn_start"
                                android:layout_width="160dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:layout_margin="2dp"
                                android:background="@drawable/buttonedge"
                                android:text="출근하기"
                                android:textColor="#ffffff"
                                android:textSize="16dp" />

                            <Button
                                android:id="@+id/btn_end"
                                android:layout_width="80dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:layout_margin="2dp"
                                android:background="@drawable/buttonedge"
                                android:text="종료"
                                android:textColor="#ffffff"
                                android:textSize="16dp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:background="#9ba1ae"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="목욕차량 미이용"
                            android:textColor="#ffffff" />

                        <Switch
                            android:id="@+id/switch1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="목욕차량 이용"
                            android:textColor="#ffffff" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:background="#d9dde4"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="서비스금액"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="0원"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bath_nocar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="115dp"
                            android:layout_height="95dp"
                            android:src="@drawable/icon_nocar" />

                        <RadioGroup
                            android:id="@+id/rg_nocar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/rb_01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="가정내(이동식) 욕조"
                                android:textColor="#717171" />

                            <RadioButton
                                android:id="@+id/rb_02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="장기요양기관"
                                android:textColor="#717171" />

                            <RadioButton
                                android:id="@+id/rb_03"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="대중목욕탕"
                                android:textColor="#717171" />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bath_car"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="115dp"
                            android:layout_height="95dp"
                            android:src="@drawable/icon_car" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="차량번호"
                                    android:textSize="16dp" />

                                <EditText
                                    android:id="@+id/et_carNumber"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"

                                    android:hint="차량번호 입력"
                                    android:textSize="16dp" />
                            </LinearLayout>

                            <RadioGroup
                                android:id="@+id/rg_car"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:id="@+id/rb_04"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="차량내 목욕"
                                    android:textColor="#717171" />

                                <RadioButton
                                    android:id="@+id/rb_05"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="가정내 목욕"
                                    android:textColor="#717171" />
                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_centerInParent="true"
                        android:background="#e0e0e0" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="115dp"
                            android:layout_height="95dp"
                            android:src="@drawable/icon_tub" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioGroup
                                android:id="@+id/rg_providing"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="전신입욕"
                                    android:textColor="#717171" />

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="침상"
                                    android:textColor="#717171" />

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="목욕의자"
                                    android:textColor="#717171" />
                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_centerInParent="true"
                        android:background="#e0e0e0" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="115dp"
                            android:layout_height="120dp"
                            android:src="@drawable/icon_face" />


                        <LinearLayout
                            android:id="@+id/lin_bathBefore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="67dp"
                                android:layout_height="21dp"
                                android:src="@drawable/icon_before" />

                            <CheckBox
                                android:id="@+id/checkBox1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="배뇨,배변"
                                android:textColor="#717171"
                                android:textSize="16dp" />

                            <CheckBox
                                android:id="@+id/checkBox2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="욕창"
                                android:textColor="#717171" />

                            <CheckBox
                                android:id="@+id/checkBox3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="얼굴색,피부색"
                                android:textColor="#717171" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_bathAfter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="67dp"
                                android:layout_height="21dp"
                                android:src="@drawable/icon_after" />

                            <CheckBox
                                android:id="@+id/checkBox4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="얼굴색,피부색"
                                android:textColor="#717171" />

                            <CheckBox
                                android:id="@+id/checkBox5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="몸단장"
                                android:textColor="#717171" />

                            <CheckBox
                                android:id="@+id/checkBox6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="주변정리"
                                android:textColor="#717171" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_centerInParent="true"
                        android:background="#e0e0e0" />

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="19dp"
                        android:layout_margin="8dp"
                        android:paddingLeft="8dp"
                        android:src="@drawable/icon_uniqe" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        android:singleLine="false"
                        android:text="발진, 창백, 멍 등의 피수상태, 욕창발생부위, 오한, 발열 여부, 상태변화시 조치사항 등을 자세히 기록해 주세요"
                        android:textColor="#717171" />

                    <EditText
                        android:id="@+id/et_etc"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/edge"
                        android:gravity="top"
                        android:inputType="text|textMultiLine"
                        android:minLines="2"
                        android:padding="4dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#26ab74"
                    android:text="저장하고 퇴근하기"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />
            </LinearLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:lottie_autoPlay="true"
                app:lottie_fileName="success.json" />
        </FrameLayout>
    </ScrollView>
</LinearLayout>