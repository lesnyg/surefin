<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jubumam.SureFin">


    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.jubumam.SureFin.MainActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity android:name="com.jubumam.SureFin.VisitingBathActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.jubumam.SureFin.VistingNurse"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity android:name="com.jubumam.SureFin.RecipientDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.jubumam.SureFin.MenuMain"
            android:screenOrientation="portrait"/>
        <activity android:name="com.jubumam.SureFin.signActivity" />
        <activity
            android:name="com.jubumam.SureFin.login"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity android:name="com.jubumam.SureFin.CustomerServiceActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.jubumam.SureFin.Client_Registration"
            android:screenOrientation="portrait"/>
        <activity android:name="com.jubumam.SureFin.Recipient" />
        <activity android:name="com.jubumam.SureFin.EditRecipientActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity android:name="com.jubumam.SureFin.ServiceListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.jubumam.SureFin.VisitingActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.jubumam.SureFin.Non_Payment_Item"
            android:screenOrientation="portrait"/>
        <activity android:name="com.jubumam.SureFin.SplashActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>