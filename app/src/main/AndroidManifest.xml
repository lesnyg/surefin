<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jubumam.SureFin">


    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.jubumam.SureFin.MainActivity" />
        <activity android:name="com.jubumam.SureFin.VisitingBathActivity"/>
        <activity android:name="com.jubumam.SureFin.VistingNurse" />
        <activity android:name="com.jubumam.SureFin.RecipientDetailActivity" />
        <activity android:name="com.jubumam.SureFin.MenuMain"/>
        <activity android:name="com.jubumam.SureFin.signActivity" />
        <activity android:name="com.jubumam.SureFin.login" />
        <activity android:name="com.jubumam.SureFin.CustomerServiceActivity" />
        <activity android:name="com.jubumam.SureFin.Client_Registration" />
        <activity android:name="com.jubumam.SureFin.Recipient" />
        <activity android:name="com.jubumam.SureFin.EditRecipientActivity" />
        <activity android:name="com.jubumam.SureFin.ServiceListActivity"/>
        <activity android:name="com.jubumam.SureFin.VisitingActivity"/>
        <activity android:name="com.jubumam.SureFin.Non_Payment_Item"/>
        <activity android:name="com.jubumam.SureFin.SplashActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>